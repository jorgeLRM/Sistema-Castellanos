<div class="container">
    <div class="row justify-content-start py-3">
        <div class="col-4">
            <input class="form-control mr-sm-2" type="search" placeholder="Buscar" aria-label="Search">
        </div>
        <div class="col4">
            <select id="inputState" class="form-control mr-sm-2">
                <option selected>Opcion 1</option>
                <option>Opcion 2</option>
                <option>Opcion 3</option>
                <option>Opcion 4</option>
            </select>
        </div>
        <div class="col-4">
            <button class="btn btn-secondary " type="submit">Buscar</button>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div data-spy="scroll" data-target="#listDevoluciones" data-offset="0" class="scrollmenu">
                <table id="tablaDevoluciones" class="table table-striped table-bordered table-sm" cellspacing="0"
                    width="100%">
                    <thead class="thead-dark">
                        <tr>
                            <th>Folio</th>
                            <th>Fecha</th>
                            <th>ID Usuario</th>
                            <th>Folio de venta</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each returns}}
                        <tr>
                            <td>{{folio_devolucion}}</td>
                            <td>{{fecha_f}}</td>
                            <td>{{id_usuario}}</td>
                            <td>{{folio_venta}}</td>
                            <td>
                                <div class="btn-group">
                                    <button class="btn btn-primary btnEditar">Modificar</button>
                                    <button class="btn btn-primary btnEditar">Eliminar</button>
                                </div>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>

            <!-- cuerpo de la tabla -->


        </div>
        <!-- cuerpo de la tabla -->

        <div class="row justify-content-center py-3">
            <div class="col-3">
                <button type="button" class="btn btn-primary" data-toggle="modal"
                    data-target="#modalPRO">Detalles</button>
            </div>
            <div class="col-3">
                <button type="button" class="btn btn-primary" data-toggle="modal"
                    data-target="#modalSUP">Eliminar</button>
            </div>
        </div>
    </div>
</div>
</div>

